<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="?attr/background"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="?attr/colorPrimary">

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|fill_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageProfile"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/ic_person"
                        app:civ_circle_background_color="?attr/background"
                        android:layout_marginTop="30dp"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="5dp"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageChangePhoto"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignRight="@id/circleImageProfile"
                        android:layout_alignBottom="@id/circleImageProfile"
                        android:layout_marginBottom="-10dp"
                        android:src="@drawable/ic_camera"
                        app:civ_circle_background_color="#FF000000"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/usernameTextInputLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/usernameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="?attr/colorAccent"
                            android:textSize="20sp"
                            android:theme="@style/TextInputEditText"
                            android:maxLength="20"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:id="@+id/linearLayoutEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <ImageButton
                            android:id="@+id/editButton"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_edit"/>

                    </LinearLayout>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_arrow_left"
                    app:civ_circle_background_color="#FF000000"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"/>

            </FrameLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>