<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageChat"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_person"
        android:layout_centerVertical="true" /> <!-- poner la foto del usuario -->

    <TextView
        android:id="@+id/textViewUsernameChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="1"
        android:textColor="@color/colorPrimaryNight"
        android:textSize="16dp"
        android:layout_toEndOf="@id/circleImageChat"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textViewLastMessageChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="1"
        android:textSize="14dp"
        android:layout_toEndOf="@id/circleImageChat"
        android:layout_below="@id/textViewUsernameChat"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"/>

    <FrameLayout
        android:id="@+id/frameLayoutMessageNotRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circular_view"/>

        <TextView
            android:id="@+id/textViewMessageNotRead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/textViewDateLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text=""
        android:textColor="?attr/colorSecondary"
        android:layout_alignBaseline="@id/textViewUsernameChat"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>