<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/contrast</item>
        <item name="titleTextColor">?attr/contrast</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ShapeView">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="CustomSpotsDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="DialogSpotColor">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="AlertDialogChat" parent="android:Theme.DeviceDefault.Dialog.Alert">
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:padding">1dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingStart">2dp</item>
    </style>


</resources>